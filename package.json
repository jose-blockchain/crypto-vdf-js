{
  "name": "crypto-vdf",
  "version": "1.0.3",
  "description": "Verifiable Delay Functions (VDF) library for Node.js and browsers - Pietrzak and Wesolowski implementations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "browser": "dist/browser/vdf.min.js",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "browser": "./dist/browser/vdf.min.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:node && npm run build:browser",
    "build:node": "tsc && tsc --module esnext --outDir dist/esm && node scripts/fix-esm-imports.js && mv dist/esm/index.js dist/index.mjs",
    "build:browser": "webpack --config webpack.config.js",
    "test": "npm run test:unit && npm run test:vdf",
    "test:unit": "jest tests/utils.test.ts tests/classgroup.test.ts tests/discriminant.test.ts tests/vdf.test.ts --runInBand",
    "test:vdf": "npm run build:node && node tests/manual/test-vdf-complete.js",
    "test:vdf:quick": "node tests/manual/test-vdf-complete.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts tests/**/*.ts --max-warnings 0",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "prepublishOnly": "npm run lint && npm run build:node && npm run test:unit",
    "publish:wait": "node scripts/publish-after-wait.js",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "vdf",
    "verifiable-delay-function",
    "cryptography",
    "pietrzak",
    "wesolowski",
    "class-group",
    "proof-of-time",
    "blockchain",
    "randomness"
  ],
  "author": "jose-blockchain",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jose-blockchain/crypto-vdf-js.git"
  },
  "bugs": {
    "url": "https://github.com/jose-blockchain/crypto-vdf-js/issues"
  },
  "homepage": "https://github.com/jose-blockchain/crypto-vdf-js#readme",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
